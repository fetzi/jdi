{
    "name": "jopic/jdi",
    "description": "simple dependency injection framework",
    "version": "1.0.0",
    "require": {
        "doctrine/common": "*",
        "hafriedlander/phockito": "1.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "phpmd/phpmd" : "@stable"
    },
    "autoload": {
        "psr-4": {
            "Jopic\\": "src/Jopic",
            "Jopic\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "doc": "vendor/bin/phpdoc",
        "md": "tools/phpmd",
        "pre-commit":
        [
            "vendor/bin/phpunit",
            "tools/phpmd"
        ]
    }
}